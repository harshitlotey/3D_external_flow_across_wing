FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     foamRun;
solver          incompressibleFluid;
startFrom       latestTime;
startTime       0;
stopAt          endTime;
endTime         3000;
deltaT          1;
writeControl    timeStep;
writeInterval   10;//
purgeWrite      3;
writeFormat     binary;
writePrecision  10;
writeCompression on;
timeFormat      general;
timePrecision   6;
runTimeModifiable true;
functions
{

residuals
    {
        type            residuals;
        libs            ("libutilityFunctionObjects.so");
        writeControl    timeStep;
        writeInterval   1;
        fields          (p U k omega); 
    }

yPlus
    {
        type            yPlus;
        libs            ("libfieldFunctionObjects.so");
        executeControl  timeStep;
        executeInterval 50;
        writeControl    writeTime;
        log             true;
    }

forceCoeffs1
    {
        // 1. Mandatory definitions
        type            forceCoeffs;
        libs            ("libforces.so");
        
        // 2. Output control
        writeControl    timeStep;
        writeInterval   1;
        log             yes;
        
        patches     (wall1); // Names of patches on which to calculate forces

        rho         rhoInf;    // Tells OpenFOAM: "Don't look for a rho field, use the value below"
        rhoInf      1.225;     // The constant density value to multiply P by

        magUInf     25;      // Far field velocity magnitude; e.g., 20 m/s
        lRef        0.25;         // Reference length scale for moment calculations;
                                // e.g., 1 m
        Aref        0.1875;         // Reference area; e.g., 1 m^2

        CofR        (0.5 0 0);         // Centre of rotation; e.g., (0 0 0)

        liftDir     (-0.0697564737441253 0.997564050259824 0);      // Direction of lift force; e.g., (0 0 1)
        dragDir     (0.997564050259824 0.0697564737441253 0);      // Direction of drag force; e.g., (1 0 0)
        pitchAxis   (0 0 1);    // Pitch axis; e.g., (0 1 0)
    }

}

// ************************************************************************* //
