|    \\/     M anipulation  |                                                 |
\*---------------------------------------------------------------------------*/
FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale 1;

x_min -1.6;
x_max 5.1;

y_min -2.1;
y_max 2.1;

z_min -1.6;
z_max 0;

n_x 134;
n_y 84;
n_z 32;

vertices
(
    ($x_min $y_min $z_min)
    ($x_max $y_min $z_min)
    ($x_max $y_max $z_min)
    ($x_min $y_max $z_min)
    ($x_min $y_min $z_max)
    ($x_max $y_min $z_max)
    ($x_max $y_max $z_max)
    ($x_min $y_max $z_max)
);

blocks ( hex (0 1 2 3 4 5 6 7) ($n_x $n_y $n_z) simpleGrading (1 1 1) );

edges ( );

boundary
(
    // The top face (Z=0) MUST be symmetry
    symmetryPlane
    {
        type symmetry; 
        faces
        (
            (4 5 6 7) 
        );
    }

    // The other faces can remain generic patches
    defaultBoundary
    {
        type patch;
        faces
        (
            (1 5 4 0) // y-min (Bottom)
            (0 4 7 3) // x-min (Inlet side)
            (2 6 5 1) // x-max (Outlet side)
            (0 3 2 1) // z-min (Back)
            (3 7 6 2) // y-max (Top)
        );
    }
);

mergePatchPairs ( );


// ************************************************************************* //
